---
import CardNav from "./CardNav.astro";
import ItemNav from "./ItemNav.astro";
---

<nav id="sidebar-navigator">
  <CardNav>
    <ul>
      <ItemNav href="/" nameItem="Inicio" boxIcon="box-icon--none">
        <svg
          slot="icon"
          class="icon icon-tabler icon-tabler-home"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M5 12l-2 0l9 -9l9 9l-2 0"></path>
          <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
          <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6"></path>
        </svg>
      </ItemNav>
      <ItemNav href="/search" nameItem="Buscar" boxIcon="box-icon--none">
        <svg
          slot="icon"
          class="icon icon-tabler icon-tabler-search"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"></path>
          <path d="M21 21l-6 -6"></path>
        </svg>
      </ItemNav>
    </ul>
  </CardNav>
  <CardNav>
    <ul>
      <ItemNav href="/" nameItem="Categorias" boxIcon="box-icon--none">
        <svg
          slot="icon"
          class="icon icon-tabler icon-tabler-category"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M4 4h6v6h-6z"></path>
          <path d="M14 4h6v6h-6z"></path>
          <path d="M4 14h6v6h-6z"></path>
          <path d="M17 17m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path>
        </svg>
      </ItemNav>
      <ItemNav href="/fonts" nameItem="Fonts" boxIcon="box-icon">
        <svg
          slot="icon"
          class="icon icon-tabler icon-tabler-typography"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M4 20l3 0"></path>
          <path d="M14 20l7 0"></path>
          <path d="M6.9 15l6.9 0"></path>
          <path d="M10.2 6.3l5.8 13.7"></path>
          <path d="M5 20l6 -16l2 0l7 16"></path>
        </svg>
      </ItemNav>
      <ItemNav href="/ai" nameItem="AI" boxIcon="box-icon">
        <svg
          slot="icon"
          class="icon icon-tabler icon-tabler-brain"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M15.5 13a3.5 3.5 0 0 0 -3.5 3.5v1a3.5 3.5 0 0 0 7 0v-1.8"
          ></path>
          <path d="M8.5 13a3.5 3.5 0 0 1 3.5 3.5v1a3.5 3.5 0 0 1 -7 0v-1.8"
          ></path>
          <path d="M17.5 16a3.5 3.5 0 0 0 0 -7h-.5"></path>
          <path d="M19 9.3v-2.8a3.5 3.5 0 0 0 -7 0"></path>
          <path d="M6.5 16a3.5 3.5 0 0 1 0 -7h.5"></path>
          <path d="M5 9.3v-2.8a3.5 3.5 0 0 1 7 0v10"></path>
        </svg>
      </ItemNav>
    </ul>
    <CardNav />
  </CardNav>

  <style>
    #sidebar-navigator {
      display: grid;
      grid-template-columns: 1fr;
      grid-template-rows: auto 1fr;
      justify-items: center;
      width: 20dvw;
      overflow: hidden;
      height: 100%;
      gap: 0.5rem;
    }
  </style>
</nav>
